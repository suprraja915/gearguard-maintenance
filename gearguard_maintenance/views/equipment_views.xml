<odoo>
    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="department"/>
                <field name="team_id"/>
                <field name="is_scrapped"/>
            </tree>
        </field>
    </record>

    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="department"/>
                        <field name="employee_id"/>
                        <field name="location"/>
                        <field name="team_id"/>
                        <field name="is_scrapped" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
