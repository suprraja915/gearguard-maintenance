<odoo>
    <!-- TREE -->
    <record id="view_request_tree" model="ir.ui.view">
        <field name="name">request.tree</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="team_id"/>
                <field name="technician_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_request_form" model="ir.ui.view">
        <field name="name">request.form</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="action_scrap" type="object"
                            string="Scrap" class="btn-danger"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="equipment_id"/>
                        <field name="team_id"/>
                        <field name="technician_id"/>
                        <field name="request_type"/>
                        <field name="scheduled_date"/>
                        <field name="duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KANBAN -->
    <record id="view_request_kanban" model="ir.ui.view">
        <field name="name">request.kanban</field>
        <field name="model">gearguard.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="technician_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
